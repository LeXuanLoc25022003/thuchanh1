@using thuchanh1.Models;
@model IList<Post>
@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2> Danh sách title</h2>
    </div>
    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Post" asp-action="Create">
            <i class="bi bibi-file-earmark-text me-1">Thêm title</i>
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card-body mt-4">
                    <table class="table table-borderless datatable">
                        <thead>
                            <tr>
                                <th class="col-1 text-center">PostID</th>
                                <th class="col-3 text-center">Title</th>
                                <td class="col-2 text-center">Abstract</td>
                                <td class="col-2 text-center">Contents</td>
                                <td class="col-1 text-center">CreatedDate</td>
                                <td class="col-1 text-center">PostOrder</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th class="text-center" scope="row">@item.PostID</th>
                                    @*                                    <td>
                                <a asp-area="Admin" asp-controller="Menu" asp-action="Details"
                                asp-route-id="@item.PostID" class="text-primary">@item.Title</a>
                                </td>*@
                                    <td class="text-center">@item.Title</td>
                                    <td class="text-center">@item.Abstract</td>
                                    <td class="text-center">@item.Contents</td>
                                    <td class="text-center">@item.CreatedDate</td>
                                    <td class="text-center">@item.PostOrder</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</main>